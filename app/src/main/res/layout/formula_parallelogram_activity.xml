<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/logo_formula_parallelogram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:fontFamily="@font/montserrat_alternates"
        android:text="@string/logo_formula"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/lightBlue"
        android:textSize="24sp"
        tools:ignore="MissingConstraints" />

    <RadioGroup
        android:id="@+id/radioGroup_parallelogram"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp">

        <RadioButton
            android:id="@+id/radioButton_parallelogram_visota"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:fontFamily="@font/andika"
            android:text="Площадь через основание и высоту"
            android:textSize="16sp"
            android:visibility="visible" />

        <RadioButton
            android:id="@+id/radioButton_parallelogram_ugol"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:fontFamily="@font/andika"
            android:text="Площадь через стороны и угол между ними"
            android:textSize="16sp"
            android:visibility="visible" />

        <RadioButton
            android:id="@+id/radioButton_parallelogram_diagonal"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:fontFamily="@font/andika"
            android:text="Площадь через диагонали и угол между ними"
            android:textSize="16sp"
            android:visibility="visible" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView_parallelogram_formula"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/andika"
        android:text=""
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText_parallelogram_formula1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_parallelogram_formula"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:fontFamily="@font/andika"
        android:hint="Введите значение"
        android:inputType="number"
        android:visibility="invisible"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/editText_parallelogram_formula2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_parallelogram_formula"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:fontFamily="@font/andika"
        android:hint="Введите значение"
        android:inputType="number"
        android:visibility="invisible"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/editText_parallelogram_formula3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_parallelogram_formula"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="178dp"
        android:ems="10"
        android:fontFamily="@font/andika"
        android:hint="Введите значение"
        android:inputType="number"
        android:visibility="invisible"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/button_back_parallelogram"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="500dp"
        android:layout_below="@id/logo_formula_parallelogram"
        android:background="@drawable/rectangle_rounded_all"

        android:text="Back" />
    <Button
        android:id="@+id/button_solve_parallelogram"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_below="@id/logo_formula_parallelogram"
        android:background="@drawable/rectangle_rounded_all"

        android:layout_marginLeft="210dp"
        android:layout_marginTop="500dp"
        android:text="Solve" />

    <TextView
        android:id="@+id/textView_parallelogram_result"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="500dp"
        android:fontFamily="@font/andika"
        android:text="Ответ:"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/image_parallelogram"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_marginTop="450dp" />


</RelativeLayout>

