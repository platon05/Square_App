<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/MistyRose"
    tools:context=".formula_activities.FormulaTriangleActivity">

    <TextView
        android:id="@+id/logo_formula_triangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:fontFamily="@font/montserrat_alternates"
        android:text="@string/logo_formula"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/lightBlue"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView_triangle_formulas"
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/andika"
        android:text=""
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="invisible" />


    <RadioGroup
        android:id="@+id/radioGroup_triangle"
        android:layout_width="180dp"
        android:layout_height="361dp"
        android:layout_marginTop="150dp">

        <RadioButton
            android:id="@+id/radioButton_triangle_tr"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:fontFamily="@font/andika"
            android:text="Площадь треугольника"
            android:textSize="16sp"
            android:visibility="visible" />


        <RadioButton
            android:id="@+id/radioButton_triangle_square"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:fontFamily="@font/andika"
            android:text="Площадь прямоугольного треугольника"
            android:textSize="16sp"
            android:visibility="visible" />

        <RadioButton
            android:id="@+id/radioButton_triangle_ravnobedr"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_alignEnd="@+id/radioButton_triangle"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/andika"
            android:text="Площадь равнобедренного треугольника"
            android:textSize="16sp"
            android:visibility="visible" />

        <RadioButton
            android:id="@+id/radioButton_triangle_ravnostor"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_alignEnd="@+id/radioButton_triangle"
            android:fontFamily="@font/andika"
            android:text="Площадь равностороннего треугольника"
            android:textSize="16sp"
            android:visibility="visible" />

    </RadioGroup>

    <Button
        android:id="@+id/button_back_triangle"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_below="@id/logo_formula_triangle"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/rectangle_rounded_all"
        android:text="Back" />

    <Button
        android:id="@+id/button_solve_triangle"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_below="@id/logo_formula_triangle"
        android:background="@drawable/rectangle_rounded_all"

        android:layout_marginLeft="210dp"
        android:layout_marginTop="500dp"
        android:text="Next" />

</RelativeLayout>