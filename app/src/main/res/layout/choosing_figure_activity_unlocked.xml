<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/MistyRose"
    tools:context=".activities.MainActivity">


    <TextView
        android:id="@+id/textBack2"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/andika"
        android:text="  ❮ Back"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/logo_unlocked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/montserrat_alternates"
        android:text="@string/logo"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/lightBlue"
        android:textSize="34sp" />

    <RadioGroup
        android:id="@+id/radioGroup_unlocked"
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:layout_alignParentStart="true"

        android:layout_alignParentEnd="true"
        android:layout_marginStart="126dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="70dp"
        android:background="@color/white">


        <RadioButton
            android:id="@+id/radioButton_triangle_unlocked"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:fontFamily="@font/andika"
            android:text="Triangle"
            android:textSize="25sp"
            android:visibility="visible" />

        <RadioButton
            android:id="@+id/radioButton_parallelogram_unlocked"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:fontFamily="@font/andika"
            android:text="Parallelogram"
            android:textSize="25sp"
            android:visibility="visible" />

        <RadioButton
            android:id="@+id/radioButton_square_unlocked"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:layout_alignEnd="@+id/radioButton_parallelogram_unlocked"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/andika"
            android:text="Square"
            android:textSize="25sp"
            android:visibility="visible" />

        <RadioButton
            android:id="@+id/radioButton_rectangle_unlocked"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_alignEnd="@+id/radioButton_square_unlocked"
            android:fontFamily="@font/andika"
            android:text="Rectangle"
            android:textSize="25sp"
            android:visibility="visible" />

        <RadioButton
            android:id="@+id/radioButton_hexagon_unlocked"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:layout_alignEnd="@+id/radioButton_rectangle_unlocked"
            android:clickable="true"
            android:fontFamily="@font/andika"
            android:text="@string/line_unlocked"
            android:textSize="25sp"
            android:visibility="visible" />

    </RadioGroup>

    <Button
        android:id="@+id/buttonNextPage_unlocked"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_below="@+id/logo_unlocked"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="408dp"
        android:background="@drawable/rectangle_rounded_all"
        android:text="Next page" />


</RelativeLayout>