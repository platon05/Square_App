<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MistyRose"
    tools:context=".activities.MainActivity">


    <TextView
        android:id="@+id/logo_welcome_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="172dp"
        android:fontFamily="@font/montserrat_alternates"
        android:text="Square"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:charIncrease="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typerSpeed="20"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/logo_welcome_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="28dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="App"
        android:textColor="@color/koral"
        android:textSize="40sp"
        app:animationDuration="1500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintStart_toEndOf="@+id/logo_welcome_2"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="239dp"
        android:layout_height="415dp"
        android:layout_below="@id/logo_welcome_3"
        android:layout_marginTop="128dp"

        android:fontFamily="@font/montserrat_alternates_medium_italic"
        android:text="@string/logo_text"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="27sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button_welcome_create_user"
        android:layout_width="128dp"
        android:layout_height="92dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rectangle_rounded_all"
        android:shadowColor="@color/koral"
        android:text="NEW USER"
        android:textColor="@color/MistyRose"
        android:textSize="20sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.868"
        app:rippleColor="@color/koral"
        app:strokeColor="@color/koral"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button_welcome_login"
        android:layout_width="128dp"
        android:layout_height="92dp"
        android:layout_marginStart="60dp"
        android:background="@drawable/rectangle_rounded_all"
        android:shadowColor="#673AB7"
        android:text="LogIN"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button_welcome_create_user"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.873"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/without_registration"
        android:layout_width="277dp"
        android:layout_height="32dp"
        android:layout_marginBottom="18dp"
        android:clickable="true"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"
        android:text="Get in without registration"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.569"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_text"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>