<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/MistyRose"
    tools:context=".formula_activities.triangle_formulas.TriangleRavnostor">>
    <TextView
        android:id="@+id/logo_formula_TriangleRavnostor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:fontFamily="@font/montserrat_alternates"
        android:text="@string/logo_formula"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/lightBlue"
        android:textSize="24sp"
        />

    <RadioGroup
        android:id="@+id/radioGroup_TriangleRavnostor"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp">

        <RadioButton
            android:id="@+id/radioButton_TriangleRavnostor_radiusOpisannoy"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_alignEnd="@+id/radioButton_TriangleRavnostor"
            android:fontFamily="@font/andika"
            android:text="Площадь через радиус описанной окружности"
            android:textSize="16sp"
            android:visibility="visible" />
        
        <RadioButton
            android:id="@+id/radioButton_TriangleRavnostor_radiusVpisannoy"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:fontFamily="@font/andika"
            android:text="Площадь через радиус вписанной окружности"
            android:textSize="16sp"
            android:visibility="visible" />

        <RadioButton
            android:id="@+id/radioButton_TriangleRavnostor_storona"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:fontFamily="@font/andika"
            android:text="Площадь через сторону"
            android:textSize="16sp"
            android:visibility="visible" />


        <RadioButton
            android:id="@+id/radioButton_TriangleRavnostor_visota"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_alignEnd="@+id/radioButton_triangle"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/andika"
            android:text="Площадь через высоту"
            android:textSize="16sp"
            android:visibility="visible" />




    </RadioGroup>

    <TextView
        android:id="@+id/textView_TriangleRavnostor_formula"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/andika"
        android:text="S = a∙ a = a², где a - сторона"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="invisible" />


    <Button
        android:id="@+id/button_back_TriangleRavnostor"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_below="@id/logo_formula_TriangleRavnostor"
        android:layout_marginLeft="25dp"

        android:layout_marginTop="500dp"
        android:background="@drawable/rectangle_rounded_all"
        android:text="Back" />

    <Button
        android:id="@+id/button_solve_TriangleRavnostor"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_below="@id/logo_formula_TriangleRavnostor"
        android:layout_marginLeft="210dp"

        android:layout_marginTop="500dp"
        android:background="@drawable/rectangle_rounded_all"
        android:text="Solve" />

    <EditText
        android:id="@+id/editText_TriangleRavnostor_formula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_TriangleRavnostor_formula"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:fontFamily="@font/andika"
        android:hint="Введите значение"
        android:inputType="number"
        android:visibility="invisible"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textView_TriangleRavnostor_result"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="500dp"
        android:fontFamily="@font/andika"
        android:text="Ответ:"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/image_triangle_ravnostor"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="370dp" />


</RelativeLayout>

