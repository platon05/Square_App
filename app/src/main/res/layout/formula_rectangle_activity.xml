<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".formula_activities.FormulaRectangleActivity">

    <TextView
        android:id="@+id/logo_formula_rectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:fontFamily="@font/montserrat_alternates"
        android:text="@string/logo_formula"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/lightBlue"
        android:textSize="24sp"
        tools:ignore="MissingConstraints" />

    <RadioGroup
        android:id="@+id/radioGroup_rectangle"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp">

        <RadioButton
            android:id="@+id/radioButton_rectangle_storoni"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:fontFamily="@font/andika"
            android:text="Площадь квадрата через сторону"
            android:textSize="16sp"
            android:visibility="visible" />

        <RadioButton
            android:id="@+id/radioButton_rectangle_diagonal"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:fontFamily="@font/andika"
            android:text="Площадь квадрата через диагональ"
            android:textSize="16sp"
            android:visibility="visible" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView_rectangle_formula"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/andika"
        android:text=""
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText_rectangle_formula1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_rectangle_formula"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:fontFamily="@font/andika"
        android:hint="Введите значение"
        android:inputType="number"
        android:visibility="invisible"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/editText_rectangle_formula2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_rectangle_formula"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:fontFamily="@font/andika"
        android:hint="Введите значение"
        android:inputType="number"
        android:visibility="invisible"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/button_back_rectangle"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="500dp"
        android:layout_below="@id/logo_formula_rectangle"
        android:background="@drawable/rectangle_rounded_all"

        android:text="Back" />
    <Button
        android:id="@+id/button_solve_rectangle"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_below="@id/logo_formula_rectangle"
        android:background="@drawable/rectangle_rounded_all"

        android:layout_marginLeft="210dp"
        android:layout_marginTop="500dp"
        android:text="Solve" />

    <TextView
        android:id="@+id/textView_rectangle_result"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="400dp"
        android:fontFamily="@font/andika"
        android:text="Ответ:"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/image_rectangle_storoni"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_marginTop="350dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/formula_rectangle_storoni_image" />

    <ImageView
        android:id="@+id/image_rectangle_diagonal"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_marginTop="350dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/formula_rectangle_diagonal_image" />

</RelativeLayout>