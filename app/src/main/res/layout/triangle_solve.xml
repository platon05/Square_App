<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/MistyRose"
    tools:context=".formula_activities.FormulaTriangleActivity">


    <EditText
        android:id="@+id/editText_triangletr_formula"
        android:layout_width="204dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView_triangletr"
        android:layout_marginStart="8dp"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:fontFamily="@font/andika"
        android:hint="Введите значение"
        android:inputType="number"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/radioGroup_triangle_solve"
        app:layout_constraintTop_toTopOf="@+id/logo_formula_triangletr"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editText_triangletr_formula2"
        android:layout_width="204dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView_triangletr"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:fontFamily="@font/andika"
        android:hint="Введите значение"
        android:inputType="number"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/radioGroup_triangle_solve"
        app:layout_constraintTop_toBottomOf="@+id/editText_triangletr_formula"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editText_triangletr_formula3"
        android:layout_width="204dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView_triangletr"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:ems="10"
        android:fontFamily="@font/andika"
        android:hint="Введите значение"
        android:inputType="number"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/radioGroup_triangle_solve"
        app:layout_constraintTop_toBottomOf="@+id/editText_triangletr_formula2"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editText_triangletr_formula4"
        android:layout_width="204dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView_triangletr"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:fontFamily="@font/andika"
        android:hint="Введите значение"
        android:inputType="number"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/textView_triangletr"
        app:layout_constraintStart_toEndOf="@+id/radioGroup_triangle_solve"
        app:layout_constraintTop_toBottomOf="@+id/editText_triangletr_formula3"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/logo_formula_triangletr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_alternates"
        android:text="@string/logo_formula"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/lightBlue"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <RadioGroup
        android:id="@+id/radioGroup_triangle_solve"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/button_back_triangletr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_formula_triangletr">

        <RadioButton
            android:id="@+id/radioButton_triangle_2sides_angle"
            android:layout_width="180dp"
            android:layout_height="77dp"
            android:fontFamily="@font/andika"
            android:text="Площадь через две стороны и угол между ними"
            android:textSize="14sp"
            android:visibility="visible" />


        <RadioButton
            android:id="@+id/radioButton_triangle_osnivis"
            android:layout_width="180dp"
            android:layout_height="77dp"
            android:fontFamily="@font/andika"
            android:text="Площадь через основание и высоту"
            android:textSize="14sp"
            android:visibility="visible" />

        <RadioButton
            android:id="@+id/radioButton_triangle_3sidesopis"
            android:layout_width="180dp"
            android:layout_height="77dp"
            android:layout_alignEnd="@+id/radioButton_triangle"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/andika"
            android:text="Площадь через радиус описанной окружности и 3 стороны"
            android:textSize="14sp"
            android:visibility="visible" />

        <RadioButton
            android:id="@+id/radioButton_triangle_3sidesvpis"
            android:layout_width="180dp"
            android:layout_height="77dp"
            android:layout_alignEnd="@+id/radioButton_square"
            android:fontFamily="@font/andika"
            android:text="Площадь через радиус вписанной окружности и 3 стороны"
            android:textSize="14sp"
            android:visibility="visible" />

        <RadioButton
            android:id="@+id/radioButton_triangle_side_2angle"
            android:layout_width="180dp"
            android:layout_height="77dp"
            android:layout_alignEnd="@+id/radioButton_square"
            android:fontFamily="@font/andika"
            android:text="Площадь через сторону и два прилежащих угла"
            android:textSize="14sp"
            android:visibility="visible" />

        <RadioButton
            android:id="@+id/radioButton_triangle_Geron"
            android:layout_width="180dp"
            android:layout_height="77dp"
            android:layout_alignEnd="@+id/radioButton_square"
            android:fontFamily="@font/andika"
            android:text="Площадь по формуле Герона"
            android:textSize="14sp"
            android:visibility="visible" />

    </RadioGroup>


    <TextView
        android:id="@+id/textView_triangletr"
        android:layout_width="204dp"
        android:layout_height="160dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="156dp"
        android:fontFamily="@font/andika"
        android:text="S = a∙ a = a², где a - сторона"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/radioGroup_triangle_solve"
        app:layout_constraintTop_toBottomOf="@+id/logo_formula_triangletr"
        app:layout_constraintVertical_bias="0.971" />

    <Button
        android:id="@+id/button_back_triangletr"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_below="@id/logo_formula_triangletr"
        android:layout_marginStart="16dp"

        android:layout_marginBottom="4dp"
        android:background="@drawable/rectangle_rounded_all"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_solve_triangletr"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_below="@id/logo_formula_triangletr"
        android:layout_marginStart="12dp"

        android:layout_marginBottom="4dp"
        android:background="@drawable/rectangle_rounded_all"
        android:text="Solve"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button_back_triangletr" />

    <TextView
        android:id="@+id/textView_triangletr_result"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="28dp"
        android:fontFamily="@font/andika"
        android:text="Ответ:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_triangletr" />

</androidx.constraintlayout.widget.ConstraintLayout>